<%= form_for @comment, url: {action: "create"}  do |f| %>

  <% if @comment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :commentario, :class => 'control-label col-lg-2', style:"margin-top: 5px" %>
    <div class="col-lg-10">
      <%= f.text_field :comment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comment) %>
  </div>

  <div class="form-group" , style="padding-top: 60px; padding-left: 20px  ">
    <%= f.label :avaliação, :class => 'control-label col-lg-2' %>
    
    <%=  select("comment", "rating", [1,2,3,4,5],  {include_blank: "selecione uma nota para a noticia"} )  %>
    <%=f.error_span(:rating) %>
  </div>
  
  <div class="form-group">
    <div class="col-lg-10">
       <%= f.hidden_field :report_id, :value => @comment.report_id%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10", style=" margin-top: 7px">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
