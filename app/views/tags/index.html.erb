<%- model_class = Tag -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:lingua) %></th>
      <th><%= model_class.human_attribute_name(:criada_em) %></th>
      
    </tr>
  </thead>
  
  <tbody>
    <% @tags.each do |tag| %>
     <% id = tag.report_id %>
      <tr>
       <td><li style="color:blue; background-color: rgba(50, 115, 220, 0.3);"><%= link_to tag.name, search_tag_path(tag) %></li></td>
        <td><%= tag.lingua %></td>
        <td><%=l tag.created_at %></td>
        
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      tag_path(tag), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tag_path(tag), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tag_path(tag),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tag_path,
            :class => 'btn btn-primary' %>
