<%= form_for @tag, :html => { :class => "form-horizontal tag" } do |f| %>

  <% if @tag.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :lingua, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lingua, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lingua) %>
  </div>
  <div class="form-group">
    <%= f.label :report_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10" , style="margin-top: 7px">
     <%=select("tag", "report_id", Report.all.collect {|r| [ r.titulo, r.id ] }, {prompt: 'Selecione o assunto da tag'})%> 

    </div>
    <%=f.error_span(:report_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tags_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
